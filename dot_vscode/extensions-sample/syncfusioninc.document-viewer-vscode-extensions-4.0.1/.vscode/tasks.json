// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
            "type": "npm",
            "script": "compile-web",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$ts-webpack"
            ]
        },
        {
            "type": "npm",
            "script": "watch-web",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                "$ts-webpack-watch"
            ]
        },
        {
            "label": "npm",
            "command": "npm",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "args": [
                "run",
                "compile",
                "--loglevel",
                "silent"
            ],
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        }
	]
}
//